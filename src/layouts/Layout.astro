---
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Lacak paket Anda dengan mudah dan cepat"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>PaketKu - Lacak Paket dengan Mudah</title>
    <ViewTransitions />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen font-['Plus_Jakarta_Sans']">
    <!-- Gradient Background -->
    <div class="fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-[#0c0c0c]">
        <div
          class="absolute inset-0 bg-gradient-to-tr from-blue-500/20 via-purple-500/20 to-pink-500/20"
        >
        </div>
        <div
          class="absolute w-[500px] h-[500px] rounded-full bg-blue-500/30 blur-[128px] -top-48 -left-48"
        >
        </div>
        <div
          class="absolute w-[500px] h-[500px] rounded-full bg-purple-500/30 blur-[128px] -bottom-48 -right-48"
        >
        </div>
      </div>
    </div>

    <div class="relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
    background: #0c0c0c;
    color: #fff;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }
</style>
